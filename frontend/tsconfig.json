{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",

    "module": "nodenext",
    "target": "es2017",
    "types": [],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "useDefineForClassFields": true,
    "noUncheckedIndexedAccess": true,
    "strict": true, 
    "exactOptionalPropertyTypes": false,
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
